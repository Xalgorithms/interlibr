{
  "id": "service-events",
  "acceptedResourceRoles": ["slave_public"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "xalgorithms/xadf-events-service:0.0.3-development"
    },
    "portMappings": [
      { "hostPort": 4200, "containerPort": 4200, "protocol": "tcp" }
    ]
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [
    {
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "portIndex": 0,
      "timeoutSeconds": 20,
      "delaySeconds": 15,
      "protocol": "MESOS_HTTP",
      "path": "/status"
    }
  ],
  "env" : {
    "ZOOKEEPER_URL" : "mesos-master"
  },
  "cmd" : "npm run start-production",
  "instances": 1,
  "cpus": 0.1,
  "mem": 64
}
