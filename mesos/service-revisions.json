{
  "id": "service-revisions",
  "acceptedResourceRoles": ["slave_public"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "xalgorithms/xadf-revisions-service:0.0.12-development"
    },
    "portMappings": [
      { "hostPort": 8000, "containerPort": 8000, "protocol": "tcp" }
    ]
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [
    {
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "portIndex": 0,
      "timeoutSeconds": 20,
      "delaySeconds": 15,
      "protocol": "MESOS_HTTP",
      "path": "/status"
    }
  ],
  "env" : {
    "RACK_ENV" : "production",
    "GITHUB_SECRET" : "731d2d4919d0da429c0e504a05f9b72276bf2486",
    "CASSANDRA_HOSTS" : "node-0-server.cassandra.autoip.dcos.thisdcos.directory, node-1-server.cassandra.autoip.dcos.thisdcos.directory",
    "MONGO_URL" : "mongodb://mongodb.marathon.l4lb.thisdcos.directory:27017"
  },
  "cmd" : "bundle exec rackup -p 8000",
  "instances": 1,
  "cpus": 0.1,
  "mem": 64
}
