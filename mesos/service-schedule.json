{
  "id": "service-schedule",
  "acceptedResourceRoles": ["slave_public"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "xalgorithms/xadf-schedule-service:0.0.13-development"
    },
    "portMappings": [
      { "hostPort": 6000, "containerPort": 6000, "protocol": "tcp" }
    ]
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [
    {
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "portIndex": 0,
      "timeoutSeconds": 20,
      "delaySeconds": 15,
      "protocol": "MESOS_HTTP",
      "path": "/status"
    }
  ],
  "env" : {
    "RACK_ENV" : "production",
    "GOOGLE_TIMEZONE_API_KEY": "AIzaSyDaRVkHq0rAw0Q_2c4F7PZGmodCw_8hh1g",
    "CASSANDRA_HOSTS" : "node-0-server.cassandra.autoip.dcos.thisdcos.directory, node-1-server.cassandra.autoip.dcos.thisdcos.directory",
    "MONGO_URL" : "mongodb://mongodb.marathon.l4lb.thisdcos.directory:27017",
    "KAFKA_BROKERS" : "broker.kafka.l4lb.thisdcos.directory:9092"
  },
  "cmd" : "bundle exec rackup -p 6000",
  "instances": 1,
  "cpus": 0.1,
  "mem": 64
}
